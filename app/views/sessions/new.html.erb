<header class="page-header">
  <h1>Login
  </h1>
</header>

<%= form_tag '/login' do %>

<div class="form-group row">
  <div class="col-md-6">
    Email:
    <%= email_field_tag :email, nil, class: "form-control"%>
  </div>
</div>

<div class="form-group row">
  <div class="col-md-6">
    Password:
    <%= password_field_tag :password, nil, class: 'form-control'%>
  </div>
</div>

<%= submit_tag "Submit", class: "btn btn-primary"%>

<% end %>
